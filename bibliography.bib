@article{Liska1968,
abstract = {The extreme attitude-control precision required by the Manned Orbiting Telescope (0.01 arcsec) may only be attainable with a system using control moment gyros (CMG's). Though the CMG is dynamically nonlinear, it can, if properly utilized, generate a torque amplification of several hundred to one. This inherent “free” gain allows the size of the gimbal servos to be reduced and their linearity and precision to be increased. This paper deals with the problem of achieving torque amplification with lightweight two-degree-of-freedom (DOF) CMG's. It is shown that this can only be accomplished by mechanically (not servo-) synchronizing the gimbals of similar CMG units. The result is a heavier system than one in which two independent 2-DOF CMG's are driven to provide three-axis control, but this price is gladly paid in return for the torque gain benefits. Mechanical synchronization also gives the 2-DOF CMG the same passive stabilization characteristics as the 1-DOF CMG. To improve matters even further, a new “coning”-type gimbal suspension is described which greatly simplifies gimbal synchronization and simultaneously eliminates the unwanted control torque cross-coupling inherent in the conventional 2-DOF CMG gimbal suspension. The gimbal and vehicle equations of motion are derived for both systems and an experimental coning suspension CMG is described which uses very low friction components in laboratory tests of high-accuracy control. {\textcopyright} 1968 American Institute of Aeronautics and Astronautics, Inc., All rights reserved.},

author = {Liska, Donald J.},
doi = {10.2514/3.29188},
issn = {00224650},
