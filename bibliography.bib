@article{doi:10.1061/(ASCE)AS.1943-5525.0000754,
author = {Lorenzo Arena  and Fabrizio Piergentili  and Fabio Santoni },
title = {Design, Manufacturing, and Ground Testing of a Control-Moment Gyro for Agile Microsatellites},
journal = {Journal of Aerospace Engineering},
